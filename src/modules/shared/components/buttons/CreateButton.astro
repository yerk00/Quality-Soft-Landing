---
import { Icon } from 'astro-icon/components'

interface Props {
  href: string
  icon?: string
}

const { href, icon } = Astro.props
---

<a
  class="bg-slate-900 text-white font-semibold px-4 py-2 rounded-lg flex gap-2 items-center hover:bg-slate-950 transition-colors"
  href={ href }
>
  {
    ( icon ) && (
      <Icon name={ icon } size={ 24 } />
    )
  }
  <slot>
</a>
