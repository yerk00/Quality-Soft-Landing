</Layout>
<script>
  // Configuraci√≥n del carrusel
  const carousel = document.getElementById('carousel');
  const items = Array.from(carousel.children); // Los elementos del carrusel
  let currentIndex = 0;

  // Funci√≥n para mover el carrusel
  const moveToNextSlide = () => {
    currentIndex = (currentIndex + 1) % items.length; // Incrementa el √≠ndice c√≠clicamente
    carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
  };

  // Configurar el intervalo de cambio autom√°tico
  setInterval(moveToNextSlide, 2000); // Cambia cada 3 segundos
</script>